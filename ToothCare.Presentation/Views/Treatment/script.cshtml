<script>

    function preAdd() {
        $("#name").val('');
        $("#price").val('');
        $("#avgMinutes").val('');
        $('#popup').modal('show');
    }

    // use to hide popup
    function hidePopup() {
        $('#popup').modal('hide');
    }

    function preEdit(model) {
        console.log(model);
        $("#idEdit").val(model.id);
        $("#nameEdit").val(model.name);
        $("#priceEdit").val(model.price);
        $("#avgMinutesEdit").val(model.averageMinutesPerSession);
        $('#popupEdit').modal('show');
    }

    // use to hide edit popup
    function hideEditPopup() {
        $('#popupEdit').modal('hide');
    }


    function deleteRecord(id) {
        var url = '@Url.Content("~/")' + "Treatment/Delete/"+id; 
        console.log(url);
        $.post(url, { "Id": id }, function (data) {
            if (data) {
                console.log("Deleted succesfully");
                location.reload();
            } else {
                console.log("Deleted failed");
                location.reload();
            }
        });
    }



</script>