    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="left-sidebar" class="sidebar">
        <div class="logo-container">
            <div class="logo-wrapper">
                 <img src="~/assets/icons/logo.svg" width="190" alt="logo icon" class="img-responsive logo" data-toggle="tooltip" data-placement="top" title="Logo">
            </div>
        </div>
        <div class="sidebar-scroll">
            <div class="user-info-container">
                <div class="user-info-wrapper ">
                    <div class="profile-avatar-containner">
                        <div class="profile-avatar-wrapper">
                            <img src="~/assets/images/avatar/profile-image.png" width="65" alt="logo icon" class="img-responsive logo" data-toggle="tooltip" data-placement="top" title="Logo">
                        </div>
                    </div>
                    <div class="user-info">
                        <h4 class="fw-semibold mt-3 mb-0">Petey Cruiser</h4>
                        <span class="mb-0 text-muted">Premium Member</span>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                <nav class="sidebar-nav">
                    <ul class="main-menu">
                        <li class="side-menu-item">
                            <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/assets/icons/form.svg" height="22" alt="menu icon" class="img-responsive logo" data-toggle="tooltip" data-placement="top" title="Menu">
                                <span class="m-2">Appointments</span>
                            </a>
                        </li>
                        <li class="side-menu-item">
                            <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/assets/icons/form.svg" height="22" alt="menu icon" class="img-responsive logo" data-toggle="tooltip" data-placement="top" title="Menu">
                                <span class="m-2">Appointments</span>
                            </a>
                        </li>
                        <li class="side-menu-item">
                            <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/assets/icons/form.svg" height="22" alt="menu icon" class="img-responsive logo" data-toggle="tooltip" data-placement="top" title="Menu">
                                <span class="m-2">Appointments</span>
                            </a>
                        </li>
                        <li class="side-menu-item">
                            <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/assets/icons/form.svg" height="22" alt="menu icon" class="img-responsive logo" data-toggle="tooltip" data-placement="top" title="Menu">
                                <span class="m-2">Appointments</span>
                            </a>
                        </li>
                        <li class="side-menu-item">
                            <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/assets/icons/form.svg" height="22" alt="menu icon" class="img-responsive logo" data-toggle="tooltip" data-placement="top" title="Menu">
                                <span class="m-2">Appointments</span>
                            </a>
                        </li>
                       
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="container dynamic-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

