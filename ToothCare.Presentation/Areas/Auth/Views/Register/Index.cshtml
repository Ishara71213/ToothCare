@model RegisterViewModel;
@{
    ViewData["Title"] = "Auth Page";
    
    //var registerData = TempData["RegisterData"] as RegisterViewModel;
    var errorMessage = TempData["ErrorMessage"] as string;

}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/ToothCare.Presentation.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />

<style>
    .register-page-wrapper {
        display: flex;
        justify-content: space-between;
    }

    .background-image-container {
        height: 100vh;
        width: 60vw;
        background-image: url('../../assets/images/BackgroundImages/background-image.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
    }

    .register-form-Container {
        height: 100vh;
        width: 50vw;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .register-form-Container .register-from-wrapper {
        width: 25vw;
        min-width: 500px;
    }

    .register-form-Container .register-from-wrapper {
        width: 30vw;
    }

    .form-containner{
        background-color: white;
        padding: 40px 50px 30px 50px;
        border-radius:20px;
        box-shadow: 0px 5px 5px 0px rgba(44, 44, 44, 0.2);
    }

    .logo-container{
        margin-bottom: 30px;
    }
    .form-group{
        margin-bottom: 12px;
        flex-grow: 1;
    }
    .form-label {
        display: block;
        font-size: 14px;
        color: #a5a0b1;
    }

    .from-group-inline{
        display:flex;
        justify-content: stretch;
        gap:20px;
    }

    .submit-btn{
        margin-top: 20px;
        width: 100%;
        height:36px;
        color:white;
        background-color: #2b7ae6;
        border-radius: 4px;
        border: none;
    }

    .bottom-text{
        text-align: center;
        margin-top: 20px;
    }
</style>



<div class="">
    @* <h1 class="display-4">Service Life Time Test</h1>
    <p>Test Singleton</p>

    <h1>GUID: @Model.Guid</h1>
    <p>Timestamp: @Model.Timestamp</p>
    <p>Message: @Model.Message</p> *@

    <div class="register-page-container">
        <div class="register-page-wrapper">
            <div class="background-image-container">
                @* <div class="image-container">
                    <img src="../../assets/images/BackgroundImages/authpage-background.jpg"  alt="backdrop" />
                </div> *@
            </div>
            <div class="register-form-Container">
                <div class="register-from-wrapper">
                    <div class="form-containner">
                        <div class="logo-container">
                            <img src="../../assets/icons/logo.svg" alt="logo" />
                        </div>
                        @if (errorMessage != null)
                        {
                            <div class="alert alert-danger">
                                @errorMessage
                            </div>
                        }
                        <form asp-controller="Register" asp-action="Register" method="post">
                            <div class="from-group-inline">
                                <div class="form-group">
                                    <label for="FirstName" class="form-label">First Name</label>
                                    <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name" required>
                                </div>
                                <div class="form-group">
                                    <label for="LastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Email" class="form-label">Email</label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
                            </div>
                            <div class="from-group-inline">
                                <div class="form-group">
                                    <label for="Password" class="form-label">Password</label>
                                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                                </div>
                                <div class="form-group">
                                    <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="MobileNo" class="form-label">Mobile Number</label>
                                <input type="text" class="form-control" asp-for="MobileNo" placeholder="Mobile Number" required>
                            </div>
                            <div class="form-group">
                                <label for="Address" class="form-label">Address</label>
                                <input type="text" class="form-control" asp-for="Address" placeholder="Address" required>
                            </div>
                            
                            <input class="submit-btn" type="submit" value="Register" />
                            <div class="bottom-text">
                                <p>Already have an Account? <a asp-controller="SignIn" asp-action="Index">Sign in</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
